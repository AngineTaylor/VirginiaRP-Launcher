<Window x:Class="Admin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#1A1F2F">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Логин -->
            <RowDefinition Height="Auto"/>
            <!-- Пароль -->
            <RowDefinition Height="Auto"/>
            <!-- Сообщение об ошибке -->
            <RowDefinition Height="*"/>
            <!-- Кнопка -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Admin Login" FontSize="28" FontWeight="Bold"
                   Foreground="#E0E0FF" HorizontalAlignment="Center" Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Логин -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Логин:" Foreground="#D0D0FF"/>
            <TextBox x:Name="LoginTextBox"
                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                     Height="28" Background="#2A2F45" Foreground="White" 
                     BorderBrush="#4A5F99" Padding="5"/>
        </StackPanel>

        <!-- Пароль -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Пароль:" Foreground="#D0D0FF"/>
            <PasswordBox x:Name="PasswordBox" Height="28" Background="#2A2F45"
                         Foreground="White" BorderBrush="#4A5F99" Padding="5"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Grid.Row="3"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Кнопка входа -->
        <Button Content="Войти" Width="120" Height="32" Grid.Row="4"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Background="#4A5F99" Foreground="White" BorderThickness="0"
                Click="LoginButton_Click"/>
    </Grid>
</Window>

<Window x:Class="Launcher.WPF.Views.NicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание персонажа" 
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F0F23">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="✏️ СОЗДАНИЕ ПЕРСОНАЖА" 
                   FontSize="16" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Имя и фамилия:" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Text="{Binding FullName}" Background="#2A2A3E" Foreground="White" 
                     BorderBrush="#4A90E2" BorderThickness="1" Padding="10" 
                     FontSize="12" Height="35"/>
            <TextBlock Text="Пример: Иван Иванов" Foreground="#666" FontSize="10" Margin="0,2,0,15"/>
            <TextBlock Text="Возраст:" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Text="{Binding AgeText}" Background="#2A2A3E" Foreground="White" 
                     BorderBrush="#4A90E2" BorderThickness="1" Padding="10" 
                     FontSize="12" Height="35"/>
            <TextBlock Text="От 18 до 50 лет" Foreground="#666" FontSize="10" Margin="0,2,0,15"/>
            <CheckBox IsChecked="{Binding AgreeChecked}" Content="Я согласен с правилами проекта" 
                      Foreground="White" FontSize="11" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="✅ Создать" Command="{Binding OkCommand}" Margin="0,0,10,0"/>
            <Button Content="❌ Отмена" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
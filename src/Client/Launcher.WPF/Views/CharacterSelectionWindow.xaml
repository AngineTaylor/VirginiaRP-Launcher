<Window x:Class="Launcher.WPF.Views.CharacterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите историю персонажа"
        Height="480" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F0F23">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🎭 ВЫБЕРИТЕ ИСТОРИЮ ПЕРСОНАЖА" 
                   FontSize="16" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <UniformGrid Grid.Row="1" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Сын олигарха -->
            <Border Background="#1A1A2E" BorderBrush="#4A90E2" BorderThickness="1" 
                    CornerRadius="8" Padding="16" Margin="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/image/billioner.png" Width="120" Height="120" Stretch="Uniform" 
                           RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,12"/>
                    <TextBlock Text="СЫН ОЛИГАРХА" Foreground="White" FontSize="14" FontWeight="Bold" 
                               TextAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Наследник долларового миллионера..." 
                               Foreground="#CCCCCC" FontSize="11" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="200" Margin="0,0,0,12"/>
                    <Button Content="ВЫБРАТЬ" Command="{Binding SelectOligarchCommand}" 
                            Background="#4A90E2" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" Height="30" Width="100" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Беспризорник -->
            <Border Background="#1A1A2E" BorderBrush="#4A90E2" BorderThickness="1" 
                    CornerRadius="8" Padding="16" Margin="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/image/sirota.png" Width="120" Height="120" Stretch="Uniform" 
                           RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,12"/>
                    <TextBlock Text="БЕЗПРИЗОРНИК" Foreground="White" FontSize="14" FontWeight="Bold" 
                               TextAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Сирота, не знающий ничего кроме насилия..." 
                               Foreground="#CCCCCC" FontSize="11" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="200" Margin="0,0,0,12"/>
                    <Button Content="ВЫБРАТЬ" Command="{Binding SelectOrphanCommand}" 
                            Background="#4A90E2" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" Height="30" Width="100" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Мафиози -->
            <Border Background="#1A1A2E" BorderBrush="#4A90E2" BorderThickness="1" 
                    CornerRadius="8" Padding="16" Margin="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/image/mafia.png" Width="120" Height="120" Stretch="Uniform" 
                           RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,12"/>
                    <TextBlock Text="МАФИОЗИ" Foreground="White" FontSize="14" FontWeight="Bold" 
                               TextAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Будучи шестеркой, вам предстоит выйти из тени..." 
                               Foreground="#CCCCCC" FontSize="11" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="200" Margin="0,0,0,12"/>
                    <Button Content="ВЫБРАТЬ" Command="{Binding SelectMafiosoCommand}" 
                            Background="#4A90E2" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" Height="30" Width="100" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="❌ Отмена" Command="{Binding CancelCommand}"
                    Background="Transparent" Foreground="White" 
                    BorderBrush="#FF5555" BorderThickness="1"
                    Padding="20,8" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>